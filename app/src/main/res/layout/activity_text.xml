<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <TextView
            android:id="@+id/tvTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:gravity="center|center_vertical"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:background="@color/background_title"
            android:textSize="@dimen/title"/>
        <TextView
            android:id="@+id/tvFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:textSize="@dimen/text_group"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lvText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/azul"
            android:dividerHeight="1dp">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView android:id="@+id/adViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            ads:adUnitId="ca-app-pub-4549935446415170/3447821246"
            ads:adSize="BANNER"/>
    </LinearLayout>

</RelativeLayout>
